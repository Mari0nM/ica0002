$TTL	604800
{{domain}}.	IN	SOA	{{ groups['dns_servers'][0] }}.{{ domain }}. marion.{{ domain }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

{% for vm in groups['dns_servers'] %}
{{ domain }}.	IN	NS	{{ vm }}
{% endfor %}

{% for vm in groups['db_servers'] %}
db{{ loop.index }}	IN	CNAME	{{ vm }}
{% endfor %}

{% for vm in groups['all'] %}
{{ vm }}	IN	A	{{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}

backup.{{ domain_name }}. IN A {{ backup_server_ip }}
