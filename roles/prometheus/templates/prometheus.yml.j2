global:
  scrape_interval:     15s # Set the scrape interval to every 15 seconds. Default is every 1 minute.
  evaluation_interval: 15s # Evaluate rules every 15 seconds. The default is every 1 minute.

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    scrape_timeout: 5s
    metrics_path: /prometheus/metrics #defaults to '/metrics'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: linux
    static_configs:
      - targets:
        # TODO: use variabled instead of port numbers
        {% for vm in groups['all'] %}
        - {{ vm }}:9100
        {% endfor %}

  - job_name: bind9
    static_configs:
      - targets: 
        {% for vm in groups['dns_servers'] %}
        - {{ vm }}:{{ bind_exporter_port }}
        {% endfor %}

  - job_name: mysql
    static_configs:
      - targets:
        {% for vm in groups['db_servers'] %}
        - {{ vm }}:{{ mysql_exporter_port }}
        {% endfor %}

  - job_name: nginx
    static_configs:
      - targets:
        {% for vm in groups['web_servers'] %}
        - {{ vm }}:{{ nginx_exporter_port }}
        {% endfor %}
  
  - job_name: influxdb
    static_configs:
      - targets:
        {% for vm in groups['influxdb_servers'] %}
        - {{ vm }}:{{ influxdb_metrics_port }}
        {% endfor %}
